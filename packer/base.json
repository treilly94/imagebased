{
  "variables": {
    "do_token": ""
  },

  "builders": [
    {
      "type": "digitalocean",
      "api_token": "{{user `do_token`}}",
      "image": "ubuntu-16-04-x64",
      "region": "lon1",
      "size": "s-1vcpu-1gb",
      "ssh_username": "root",
      "snapshot_name": "base-{{isotime \"2006-01-02_03:04\"}}"
    }
  ],

  "provisioners": [
    {
      "type": "salt-masterless",
      "local_state_tree": "../salt"
    }
  ],

  "sensitive-variables": ["do_token"]
}